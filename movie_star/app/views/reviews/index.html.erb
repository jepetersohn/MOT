<div class="film-header shadow">
  <p class="top-film-header">All reviews</p>
</div>

  <% @reviews.each do |review| %>
    <a href="movies/<%=review.movie.id%>"><b><%=review.movie.title%></b></a>
    <br>
    Reviewed at: <%=review.created_at%>
    <br>
    Reviewer: <%=review.reviewer.username%>
    <br>
    <%=review.body%>
    <br>

  <% end %>


